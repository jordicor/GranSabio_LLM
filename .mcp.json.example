{
  "_instructions": [
    "IMPORTANT: Copy this file to .mcp.json and replace the path below with your ABSOLUTE path.",
    "MCP servers require absolute paths - relative paths will NOT work.",
    "Recommended: Use install_mcp.bat (Windows) or install_mcp.sh (Linux/macOS) instead.",
    "Windows example: C:/Projects/Gran_Sabio_LLM/mcp_server/gransabio_mcp_server.py",
    "Linux example: /home/user/Gran_Sabio_LLM/mcp_server/gransabio_mcp_server.py"
  ],
  "mcpServers": {
    "gransabio-llm": {
      "type": "stdio",
      "command": "python",
      "args": ["/REPLACE/WITH/YOUR/ABSOLUTE/PATH/TO/Gran_Sabio_LLM/mcp_server/gransabio_mcp_server.py"],
      "env": {
        "GRANSABIO_API_URL": "${GRANSABIO_API_URL:-http://localhost:8000}",
        "GRANSABIO_API_KEY": "${GRANSABIO_API_KEY:-}",
        "GRANSABIO_GENERATOR_MODEL": "${GRANSABIO_GENERATOR_MODEL:-gpt-5.2}",
        "GRANSABIO_QA_MODELS": "${GRANSABIO_QA_MODELS:-claude-opus-4-5-20251101,z-ai/glm-4.7,gemini-3-pro-preview}",
        "GRANSABIO_ARBITER_MODEL": "${GRANSABIO_ARBITER_MODEL:-claude-opus-4-5-20251101}",
        "GRANSABIO_GENERATOR_REASONING": "${GRANSABIO_GENERATOR_REASONING:-medium}",
        "GRANSABIO_QA_REASONING": "${GRANSABIO_QA_REASONING:-medium}",
        "GRANSABIO_ARBITER_REASONING": "${GRANSABIO_ARBITER_REASONING:-high}",
        "GRANSABIO_THINKING_BUDGET": "${GRANSABIO_THINKING_BUDGET:-0}"
      },
      "description": "Gran Sabio LLM - Multi-model QA for code analysis and content generation with reasoning support"
    }
  }
}
